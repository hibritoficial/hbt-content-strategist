{
  "version": "2.0.0",
  "updated": "2025-01-22",
  "process": {
    "name": "Content Creation Process",
    "description": "Processo modular para criação de conteúdo usando framework LEGO",
    "steps": [
      {
        "id": "context",
        "name": "Definir Contexto",
        "description": "Selecionar cliente, funil, cultura, região e avatar",
        "required_fields": ["client", "funnel", "culture", "region", "avatar"],
        "validation": "All fields must be selected"
      },
      {
        "id": "template",
        "name": "Escolher Template",
        "description": "Selecionar formato e molde visual",
        "required_fields": ["template"],
        "validation": "Template must be selected"
      },
      {
        "id": "content",
        "name": "Criar Conteúdo",
        "description": "Definir gancho, prova social e CTA",
        "required_fields": ["hook", "proof", "cta"],
        "validation": "All content elements must be selected"
      },
      {
        "id": "generation",
        "name": "Gerar Variações",
        "description": "Produzir múltiplas versões do conteúdo",
        "required_fields": ["variations"],
        "validation": "At least 3 variations must be generated"
      },
      {
        "id": "quality_check",
        "name": "Quality Check",
        "description": "Validar clareza, benefício, prova e CTA único",
        "criteria": [
          "Clareza da mensagem",
          "Benefício claro para o avatar",
          "Prova social relevante",
          "CTA único e específico",
          "Ética e compliance"
        ]
      }
    ]
  },
  "templates": {
    "reel_30_45s": {
      "id": "reel-30s",
      "name": "Reel 30-45s",
      "description": "Vídeo educativo rápido",
      "structure": [
        "Hook (dor/condição) - 0-3s",
        "Mecanismo (solução) - 3-15s",
        "Prova (resultado) - 15-30s",
        "Aplicação (como usar) - 30-40s",
        "CTA (ação) - 40-45s"
      ],
      "visual_notes": "Uso de texto sobreposto, transições rápidas, música envolvente",
      "best_for": ["Educativo", "Tutorial", "Dica rápida"]
    },
    "carrossel_aida": {
      "id": "carrossel-7",
      "name": "Carrossel 7 slides",
      "description": "AIDA completo",
      "structure": [
        "Slide 1: Atenção (hook visual)",
        "Slide 2: Interesse (problema/dor)",
        "Slide 3: Desejo (solução/benefício)",
        "Slide 4: Prova (resultado/case)",
        "Slide 5: Mecanismo (como funciona)",
        "Slide 6: Oferta (produto/serviço)",
        "Slide 7: Ação (CTA claro)"
      ],
      "visual_notes": "Design consistente, hierarquia visual clara, CTA destacado",
      "best_for": ["Vendas", "Apresentação de produto", "Case de sucesso"]
    },
    "post_educativo": {
      "id": "post-educativo",
      "name": "Post Educativo",
      "description": "Conteúdo informativo",
      "structure": [
        "Título impactante",
        "Texto explicativo (2-3 parágrafos)",
        "Lista de benefícios",
        "Prova social",
        "CTA educativo"
      ],
      "visual_notes": "Imagem de apoio, texto legível, hashtags relevantes",
      "best_for": ["Educativo", "Dica técnica", "Informação"]
    }
  },
